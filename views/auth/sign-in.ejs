<%- include('../partials/_navbar.ejs') %>

<h1>Sign In</h1>

<form action="/auth/sign-in" method="POST" class="form-container">
    <label for="username">Username</label>
    <input type="text" name="username" id="username" class="text-input" required><br>

    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="text-input" required><br>

    <button type="submit" class="btn">Sign In</button>
</form>
