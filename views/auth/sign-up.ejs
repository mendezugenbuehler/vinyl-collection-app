<link rel="stylesheet" href="/styles.css" />
<%- include('../partials/_navbar.ejs') %>

  <h1>Sign Up</h1>

  <form action="/auth/sign-up" method="POST" class="form-container">
    <label for="username">Username</label>
    <input type="text" name="username" id="username" class="text-input" required><br>

    <label for="password">Password</label>
    <input type="password" name="password" id="password" class="text-input" required><br>

    <label for="confirmPassword">Confirm Password</label>
    <input type="password" name="confirmPassword" id="confirmPassword" class="text-input" required><br>

    <button type="submit" class="btn">Sign Up</button>
  </form>